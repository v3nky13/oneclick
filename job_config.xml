<?xml version='1.1' encoding='UTF-8'?>
<flow-definition plugin="workflow-job">
    <actions/>
    <description>Jenkins Pipeline Job for OneClick Git Repository</description>
    <keepDependencies>false</keepDependencies>
    <properties/>
    <definition class="org.jenkinsci.plugins.workflow.cps.CpsScmFlowDefinition">
        <scm class="hudson.plugins.git.GitSCM">
            <configVersion>2</configVersion>
            <userRemoteConfigs>
                <hudson.plugins.git.UserRemoteConfig>
                    <url>https://github.com/v3nky13/oneclick.git</url>
                </hudson.plugins.git.UserRemoteConfig>
            </userRemoteConfigs>
            <branches>
                <hudson.plugins.git.BranchSpec>
                    <name>*/main</name>
                </hudson.plugins.git.BranchSpec>
            </branches>
            <doGenerateSubmoduleConfigurations>false</doGenerateSubmoduleConfigurations>
            <submoduleCfg class="list"/>
            <extensions/>
            <gitTool>Default</gitTool> <!-- Uses the system-installed Git -->
        </scm>
        <scriptPath>daily.Jenkinsfile</scriptPath>
        <lightweight>true</lightweight>
    </definition>
    <triggers>
        <hudson.triggers.TimerTrigger>
            <spec>45 9 * * *</spec> <!-- Runs daily at 09:45 AM -->
        </hudson.triggers.TimerTrigger>
    </triggers>
    <disabled>false</disabled>
</flow-definition>
